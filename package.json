  "engines": {
    "node": ">=12.13.0"
  },
  "dependencies": {
    "ws": "^7.4.6",
    "yaml": "^1.10.2"
  },
  "devDependencies": {
    "@types/node": "^15.0.2",
    "@types/ws": "^7.4.4",
    "@typescript-eslint/eslint-plugin": "^4.1.0",
    "@typescript-eslint/parser": "^4.1.0",
    "eslint": "^7.8.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsdoc": "^30.4.1",
    "typescript": "^4.2.4"
  }
}
